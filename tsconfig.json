{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./build/lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDir": "lib",
    "downlevelIteration": true,
    "declaration": true,
    "declarationDir": "./types"
  }
}
